{
  "manifest_version": 3,
  "name": "TruthLens - Misinformation Detector",
  "version": "3.0",
  "permissions": ["activeTab", "scripting", "tabs", "storage", "sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open TruthLens"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidepanel.html", "sidepanel.css", "sidepanel.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
